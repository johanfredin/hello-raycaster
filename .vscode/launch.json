{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Renderer",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/c-caster/raycast",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "miDebuggerPath": "/usr/bin/gdb",
            "logging": {
                "info": true,
                "trace": false,
                "traceResponse": false
            },
            "linux": {
                "miDebuggerPath": "/usr/bin/gdb"
            },
            "windows": {
                "miDebuggerPath": "path to gdb on windows if you're on windows"
            }
        }
    ]
}
